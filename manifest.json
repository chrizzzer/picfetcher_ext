{
  "manifest_version": 2,

  "name"			: "PicFetcher",
  "version"			: "0.1",
  "description"		: "This is a first Chrome extension displaying a website's brand icon.",


  "browser_action"	: {
    "default_icon"	: "icon.png",
    "default_popup" : "popup.html",
    "default_title"	: "Click here!"
  },

  "permissions"     : [
  	"activeTab",
  	"https://ajax.googleapis.com/"
  ]
} 